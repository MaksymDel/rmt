{
  "dataset_reader": {
    "type": "bert_features2tokens"
  },
  "train_data_path": "fixtures/data/",
  "validation_data_path": "fixtures/data/",
  "model": {
    "type": "semantic_space_decoder",
    "encoder": {
      "type": "lstm",
      "input_size": 768,
      "hidden_size": 768 / 2,
      "num_layers": 1,
      "bidirectional": true
    },
    "max_decoding_steps": 20,
    "target_embedding_dim": 30,
    "target_namespace": "tokens",
    "attention": {
      "type": "dot_product"
    },
    "beam_size": 5
  },
  "iterator": {
    "type": "basic",
    "batch_size" : 2
  },
  "trainer": {
    "num_epochs": 2,
    "patience": 10,
    "cuda_device": -1,
    "optimizer": {
      "type": "adam",
      "lr": 0.01
    }
  }
}