      "mapping_layer": {
        "type": "att_rnn2rnn",
        "encoder": {
          "type": "lstm",
          "input_size": 768,
          "hidden_size": 768 / 2,
          "num_layers": 1,
          "bidirectional": true
        },
        "max_decoding_steps": 20,
        "target_embedding_dim": 768,
        "attention": {
          "type": "dot_product"
        },
        "scheduled_sampling_ratio": 0
      }
    },
    
    "iterator": {
      "type": "basic",
      "batch_size" : 2
    },
    "trainer": {
      "num_epochs": 2,
      "patience": 10,
      "cuda_device": -1,
      "optimizer": {
        "type": "sgd",
        "lr": 0.01
